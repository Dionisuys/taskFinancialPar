{% extends 'base.html.twig' %}

{% block body %}
    <div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
        <div class="card border rounded shadow p-4" style="background-color: #f8f8f8;">
            <h1 class="card-title text-center">Оставьте заявку</h1>

            {% if errorMessage is not empty %}
                <div class="alert alert-danger text-center">{{ errorMessage|raw }}</div>
            {% endif %}

            {{ form_start(form, {'attr': {'class': 'form'}}) }}
            {{ form_errors(form) }}

            <div class="form-group">
                {{ form_label(form.name, 'Имя', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control', 'pattern': '[a-zA-Zа-яА-ЯёЁ]+', 'title': 'Только буквы'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.lastName, 'Фамилия', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.lastName, {'attr': {'class': 'form-control', 'pattern': '[a-zA-Zа-яА-ЯёЁ]+', 'title': 'Только буквы'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.phone, 'Телефон', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.phone, {'attr': {'class': 'form-control', 'type': 'tel', 'title': 'Введите правильный номер телефона'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'type': 'email'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.comment, 'Сообщение', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.comment, {'attr': {'class': 'form-control'}}) }}
            </div>

            {{ form_widget(form._token) }}
            <div class="d-grid gap-2 d-md-flex justify-content-md-between mt-3">
                <a href="{{ path('home') }}" class="btn btn-secondary me-md-2">Отмена</a>
                <button type="submit" class="btn btn-primary">Отправить</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}


